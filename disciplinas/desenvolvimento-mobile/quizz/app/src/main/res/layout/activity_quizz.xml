<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quizz">

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="412dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="27dp"
        android:text="Pergunta"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rgOptions"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="0dp">

        <RadioButton
            android:id="@+id/rbOption01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Resposta 1"
            android:textSize="20sp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/rbOption02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Resposta 2"
            android:textSize="20sp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/rbOption03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Resposta 3"
            android:textSize="20sp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/rbOption04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Resposta 4"
            android:textSize="20sp"
            android:textStyle="italic" />
    </RadioGroup>

    <Button
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="109dp"
        android:layout_marginBottom="135dp"
        android:backgroundTint="#3F51B5"
        android:onClick="btnSendOnClick"
        android:padding="10dp"
        android:text="Responder"
        android:textSize="24sp" />
</RelativeLayout>